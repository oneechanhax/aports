# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kimap
pkgver=19.12.2
pkgrel=1
pkgdesc="Job-based API for interacting with IMAP servers"
arch="all !armhf"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="qt5-qtbase-dev cyrus-sasl-dev kcoreaddons-dev ki18n-dev kio-dev kmime-dev"
makedepends="$depends_dev extra-cmake-modules"
source="https://download.kde.org/stable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	# loginjobtest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "loginjobtest"
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="71d0e0385a9e612b8d204fbd12b6fa1c1bcfa4509aaf7db58d832d9aee2d0fc6ed738fed304890bb8b9fc44d7b61d4d7cdb6a55908800de4f6c8d021e567d7ca  kimap-19.12.2.tar.xz"
